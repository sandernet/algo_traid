{
    // Используйте IntelliSense, чтобы узнать о возможных атрибутах.
    // Наведите указатель мыши, чтобы просмотреть описания существующих атрибутов.
    // Для получения дополнительной информации посетите: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "App no args",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/app.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Backtester",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/app.py",
            "args": ["--btest"],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Debugger strategy",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/app.py",
            "args": ["--debug"],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "loaddata minimal",
            "type": "python",
            "request": "launch", 
            "program": "${workspaceFolder}/app.py",
            "args": ["--ldata"],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "load_data_full",
            "type": "python",
            "request": "launch", 
            "program": "${workspaceFolder}/app.py",
            "args": ["--ldata", "--ld_min"],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Run All Tests",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "src/tests",
                "-v"
            ],
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "cwd": "${workspaceFolder}"
        },
    ]
}